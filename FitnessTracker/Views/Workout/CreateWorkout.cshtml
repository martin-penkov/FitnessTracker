@model FitnessTracker.ViewModels.ExerciseWorkoutDropDViewModel
@{
    ViewData["Title"] = "Create Workout";
}
<div style="background: url(../images/workoutpageimg.jpg);
     background-repeat: no-repeat;
     height: 100%;
     width: 100%;
     background-position: center;
     background-size: cover;
     position: relative;">
    <form asp-controller="Workout" asp-action="CreateWorkoutAction" class="workoutwhitecontainer">
        <br />
        <div style="margin-left:35px; margin-top:10px">
            <h1>Create Workout</h1>
        </div>
        <br />
        <div style="text-align:center">
            <br />
            <label for="Name"><h4>Name</h4></label>
            <input type="text" name="Name"
                   style="width: 90%; margin-left: 34px;background: #f1f1f1; border-radius: 25px; border-width: 1.5px" placeholder="Name of the exercise..."
                   class=" form-control" />
            <br />
            <label for="Id"><h4>Add your exercises</h4></label>
            <div class="addExerciseDropdowns col-md-5">
                <div class="sampleValue">
                    <div class="form-group" style="margin-left: 20px; width: 810px;">
                        <select asp-items="@(new SelectList(Model.uniqueExercises, "Name"))" name="ExerciseNames" class="col-10 form-control">
                            <option> Choose from your exercises... </option>
                        </select>
                        @*<button class="col-1" type="button" onclick="deleteCurrentParent()">&#10006</button>*@
                    </div>
                </div>
            </div>
            <br />
            <button type="button" onclick="AddNewDropdown()" style="padding:10px 100px;border-radius: 20px; background-color: black; color: beige; font-weight: bold;font-size:15px" class="btn btn-primary">Add new exercise...</button>
            <br />
            <br />
            <p align="center">
                <button type="submit"
                        style="padding:14px 320px;border-radius: 20px; background-color: black; color: beige; font-weight: bold;font-size:20px"
                        class="btn btn-primary">
                    Create
                </button>
            </p>
        </div>
    </form>
</div>
