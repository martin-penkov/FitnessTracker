@model FitnessTracker.ViewModels.BodypartCategoryViewModel
@{
    ViewData["Title"] = "Add Exercise";
}
<div style="background: url(../images/realmexeimage.jpg);
     background-repeat: no-repeat;
     height: 100%;
     width: 100%;
     background-position: center;
     background-size: cover;
     position: relative;">
    <form asp-action="CreateExerciseAction" class="container1">
        <br />
        <div style="margin-left:35px; margin-top:10px">
            <h1>Create exercise</h1>
        </div>
        <br />
        <div style="text-align:center">
            <br />
            <label for="Name"><h4>Name</h4></label>
            <input type="text" name="Name"
                   style="width: 90%; margin-left: 34px;background: #f1f1f1; border-radius: 25px; border-width: 1.5px" placeholder="Name of the exercise..."
                   class=" form-control" />
            
            <div class="col-md-5">
                <div class="form-group" style="margin-left: 20px; width:670px;">
                    <label for="Id"><h4>Bodypart</h4></label>
                    <select asp-items="@(new SelectList(Model.BodyParts,"Id", "Name"))" name="BodyPartId" class="form-control"></select>
                </div>
                <div class="form-group" style="margin-left: 20px; width:670px;">
                    <label for="Id"><h4>Category</h4></label>
                    <select asp-items="@(new SelectList(Model.Category,"Id", "Name"))" name="CategoryId" class="form-control"></select>
                </div>
            </div>      
            <p align="center">
                <button type="submit"
                        style="padding:14px 320px;border-radius: 20px; background-color: black; color: beige; font-weight: bold;font-size:20px"
                        class="btn btn-primary">
                    Create
                </button>
            </p>
        </div>
    </form>
</div>

